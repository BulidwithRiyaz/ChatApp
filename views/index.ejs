<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatapp</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>All Chats</h1>
    <form method="GET" action="/chats/new" class="new-chat">
        <button>New Chat</button>
    </form>
    <%for (let chat of chats){%>
        <div class="chat">
            <p>Chat send by : <i><%=chat.from%></i></p>
            <div class="msg">
                <p><%=chat.msg%></p>
                <p>Chat send to : <i><b><%=chat.to%></b></i></p>
                <p>Time : <%=chat.created_at.toString().split(" ")[4]%></p>
                <p>Date : <%=chat.created_at.toString().split(" ").slice(0,4).join(" ")%></p>
                <form method="GET" action="/chats/<%=chat._id%>/edit">
                    <button>Edit</button>
                </form>
                <form method="POST" action="/chats/<%=chat._id%>?_method=DELETE">
                    <button>Delete</button>
                </form>
            </div>
            <hr>
        </div>
    <%}%>
</body>
</html>
